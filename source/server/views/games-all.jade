extends layout
block content
  h1
    | Games
  .container
    .row
      each game in data
        .col-md-4
          .panel.panel-default
            .panel-heading
              a(href="games/" + game.id)
                =game.name
            if game.images.length > 0
              img.img-responsive(style="margin: 10px auto", src=game.images[0])
            else
              img.img-responsive(style="margin: 10px auto", src=game.mainPageImage)
            ul.list-group
              li.list-group-item
                ='Rating: '
                span.badge
                  =game.rating
                if isAuthenticated && game.rating < 10
                  div.badge
                    i(class="fa fa-thumbs-up fa-lg rateUpGame", data-id=game.id)
                  if isAuthenticated && game.rating > 1
                    div.badge
                      i(class="fa fa-thumbs-down fa-lg rateDownGame", data-id=game.id)
              li.list-group-item
                ='Description: '
                span.badge
                  =game.description
